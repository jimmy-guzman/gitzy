{
  "name": "gitzy",
  "version": "6.0.0",
  "description": "interactive conventional commits cli",
  "keywords": [
    "conventional commits",
    "cli",
    "git"
  ],
  "homepage": "https://github.com/jimmy-guzman/gitzy",
  "bugs": "https://github.com/jimmy-guzman/gitzy/issues",
  "repository": "jimmy-guzman/gitzy",
  "license": "MIT",
  "author": "jimmy-guzman @jimmy-guzman",
  "type": "module",
  "bin": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkgroll --minify --target=node20.19.0",
    "precheck": "pnpm build",
    "check": "run-p knip lint format coverage typecheck lint:package",
    "coverage": "vitest run --coverage",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "gitzy": "pnpm build && ./dist/index.mjs --commitlint",
    "knip": "knip",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "lint:package": "publint",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "is-ci || husky",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*.{md,json,yml,ts}": [
      "prettier -w"
    ],
    "*.{js,ts,test}": [
      "eslint --fix"
    ]
  },
  "prettier": "@jimmy.codes/prettier-config",
  "dependencies": {
    "commander": "^14.0.1",
    "enquirer": "2.3.6",
    "lilconfig": "^3.1.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@jimmy.codes/eslint-config": "6.14.3",
    "@jimmy.codes/prettier-config": "2.1.0",
    "@leeoniya/ufuzzy": "1.0.19",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.15.32",
    "@vitest/coverage-v8": "3.2.4",
    "clean-pkg-json": "1.3.0",
    "commitlint": "20.1.0",
    "eslint": "9.38.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jiti": "2.6.1",
    "knip": "5.66.3",
    "lint-staged": "16.2.6",
    "npm-run-all2": "8.0.4",
    "pkgroll": "2.20.1",
    "prettier": "3.6.2",
    "publint": "0.3.15",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
