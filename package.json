{
  "name": "gitzy",
  "description": "interactive conventional commits cli",
  "version": "3.2.0",
  "author": "jimmy-guzman @jimmy-guzman",
  "main": "dist/index.js",
  "repository": "jimmy-guzman/gitzy",
  "bugs": "https://github.com/jimmy-guzman/gitzy/issues",
  "homepage": "https://github.com/jimmy-guzman/gitzy",
  "keywords": [
    "conventional commits",
    "cli",
    "git"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "gitzy": "./bin/run"
  },
  "scripts": {
    "dev": "run-p build:watch ts-check:watch",
    "format": "prettier '**/**/*.{md,yml,json,ts}'",
    "format:check": "pnpm format -c",
    "format:write": "pnpm format -w",
    "lint": "eslint --cache '**/**/*.{js,ts,*.test}'",
    "lint:fix": "pnpm lint --fix",
    "test": "jest -c .config/jest.config.js --coverage",
    "test:watch": "jest -c .config/jest.config.js --watch",
    "e2e": "jest -c e2e/jest.config.js",
    "ts-check": "tsc -b tsconfig.json",
    "ts-check:watch": "pnpm ts-check --watch",
    "validate": "run-p lint format:check test ts-check",
    "build": "rm -rf dist/ && rollup -c .config/rollup.config.js --validate",
    "build:watch": "pnpm build --watch --exclude dist/ --environment DEV",
    "build:debug": "pnpm build --environment DEBUG_MODE",
    "cz": "pnpm build && ./bin/run --commitlint",
    "prepare": "is-ci || husky install"
  },
  "prettier": "@comparto/prettier-config",
  "lint-staged": {
    "*.{md,json,yml,ts}": [
      "prettier -w"
    ],
    "*.{js,ts,test}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "commander": "^9.0.0",
    "enquirer": "^2.3.6",
    "lilconfig": "^2.0.4",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@comparto/prettier-config": "1.2.0",
    "@rollup/plugin-commonjs": "22.0.0",
    "@rollup/plugin-eslint": "8.0.2",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@types/jest": "28.1.5",
    "@types/node": "16.11.27",
    "commitlint": "16.2.3",
    "esbuild": "0.14.38",
    "eslint": "8.14.0",
    "eslint-config-jimmy-guzman": "5.0.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "28.1.3",
    "lint-staged": "12.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "rollup": "2.74.1",
    "rollup-plugin-esbuild": "4.9.1",
    "rollup-plugin-node-externals": "4.0.0",
    "rollup-plugin-visualizer": "5.6.0",
    "semantic-release": "19.0.2",
    "ts-jest": "28.0.6",
    "typescript": "4.6.3"
  },
  "files": [
    "/bin",
    "/dist"
  ],
  "engines": {
    "node": ">= 14"
  },
  "volta": {
    "node": "16.16.0"
  }
}
